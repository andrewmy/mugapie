includes:
    - %currentWorkingDirectory%/vendor/phpstan/phpstan-doctrine/extension.neon
    - %currentWorkingDirectory%/vendor/phpstan/phpstan-deprecation-rules/rules.neon
    - %currentWorkingDirectory%/vendor/phpstan/phpstan-strict-rules/rules.neon

parameters:
    level: max
    paths:
        - src
    excludes_analyse:
        - src/Infrastructure/Doctrine/Migrations
    tmpDir: %currentWorkingDirectory%/var/phpstan
    ignoreErrors:
        -
            message: '~Variable property access on mixed.~'
            path: src/Application/Validator/Constraints/UniqueEntityDtoValidator.php
